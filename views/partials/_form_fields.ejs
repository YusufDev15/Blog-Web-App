<!-- Form group for article title -->
<div class="form-group">
  <label for="title">Title</label>
  <input
    required
    value="<%= article.title %>"
    name="title"
    id="title"
    class="form-control"
  />
</div>
<!-- Form group for the article description -->
<div class="form-group">
  <label for="description">Description</label>
  <textarea name="description" id="description" class="form-control">

<%= article.description %></textarea
  >
</div>
<!-- Form group for the article markdown content -->
<div class="form-group">
  <label for="markdown">Markdown</label>
  <textarea required name="markdown" id="markdown" class="form-control">
<%= article.markdown %></textarea
  >
</div>
<br />
<!-- cancel button -->
<a href="/" class="btn btn-secondary">Cancel</a>
<!-- save button -->
<button type="submit" class="btn btn-primary">Save</button>
